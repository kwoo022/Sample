<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">

    <ProgressBar
        android:id="@+id/tgs_progress_loading_bar_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="#3f64fa"
        android:progressBackgroundTint="#ffffff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <LinearLayout
        android:id="@+id/tgs_layout_loading_bar_line"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/round_rect_white_none"
        android:paddingHorizontal="30dp"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:id="@+id/tgs_textview_loading_bar_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="파일명"
            android:textColor="#5f6268"
            android:textSize="12sp"/>
        <ProgressBar
            android:id="@+id/tgs_progress_loading_bar_line"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressTint="#3f64fa"
            android:progressBackgroundTint="#8b9baf"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>