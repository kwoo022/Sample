<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:background="@color/tgsfw_side_menu_step2_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">
        <View
            android:id="@+id/tgs_view_menu_item_header"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/hround_rect_white_none_1"/>
        <LinearLayout
            android:id="@+id/tgs_layout_menu_item"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/tgsfw_side_menu_step3_bg">
            <ImageView
                android:id="@+id/tgs_image_menu_item_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:src="@drawable/gnb_d3_ic1"/>
            <TextView
                android:id="@+id/tgs_textview_menu_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="메뉴명"
                android:textSize="12sp"
                android:textColor="@color/selector_side_menu_lv3_text"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <View
            android:id="@+id/tgs_view_menu_item_footer"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/hround_rect_white_none_2"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>